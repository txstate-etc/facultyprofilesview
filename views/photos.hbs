<div class="photo-bank">
  {{#each people}}
    <div class="profile">
      <div class="profile-image">
        {{> facecropimage defaultimage='/images/userprofile-defaultimage.png' profile=this}}
      </div>
      <div class="name">
        <a href="/profile/{{this.id}}">{{this.display_name}}</a>
      </div>
      <div class="detection">
        {{#if this.portrait.face.detected}}has face{{else}}no face{{/if}}
      </div>
    </div>
  {{/each}}
</div>
<div class="pagination">
  {{#if hasnextpage}}
    <a href="/photos?page={{nextpage}}">next page</a>
  {{/if}}
</div>
